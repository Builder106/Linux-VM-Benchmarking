<!-- app/views/benchmarks/new.html.erb -->
<div class="container">
  <h1>Submit Custom Benchmark</h1>
  <%= form_with url: benchmarks_path, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name, "Benchmark Name" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :configuration, "Configuration" %>
      <%= form.text_area :configuration, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit "Submit", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>